{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": "src",
    "paths": {
  "@/*": ["*"],                       // general alias for all of src
  "component/*": ["component/*"],     // singular 'component' folder
  "components/*": ["components/*"],   // plural 'components' folder
  "aicomponents/*": ["aicomponents/*"] // ai components
},
    "noImplicitAny": false  // ðŸ‘ˆ Allow 'any' temporarily
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
